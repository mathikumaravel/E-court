<p id="notice"><%= notice %></p>

<h1  class="text-center">User path</h1>

<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= link_to user.username, users_path %>
       
            </div>
            <div class="card-body">
              <h5 class="card-title">E-court</h5>
              <p class="card-text"><%= pluralize(user.case_infos.count,"case_info") %></p>
              <%= link_to "View profile",user, class: "btn btn-outline-success" %>
             
                <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-info" %>
               
              
            </div>
            <div class="card-footer text-muted">
              <small>Registrated on<%= time_ago_in_words(user.created_at) %> ago, 
              
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>






