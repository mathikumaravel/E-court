

<div class="container">
  <% @case_infos.each do |case_info| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
       
            </div>
            <div class="card-body">
            <ul class="list-group">
            <li class="list-group-item"> <div class="col-sm-3">Case type</div>
            <div class="col-sm-9"><%= case_info.case_type.type_of_case %></div>
                </li>
        
  
            </div>
            <div class="card-footer">
            <%= link_to "View", case_info_path(case_info), class: "btn btn-outline-success" %>
              
            <%= link_to "Edit", edit_case_info_path(case_info), class: "btn btn-outline-info" %>
            <%= link_to "Delete", case_info_path(case_info), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
 